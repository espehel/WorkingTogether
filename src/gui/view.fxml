<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<GridPane  xmlns:fx="http://javafx.com/fxml"
          alignment="center" hgap="10" vgap="10"
        >

    <TextField fx:id="input" GridPane.rowIndex="0" GridPane.columnIndex="0"></TextField>
    <Button fx:id="calculate" text="Calculate" onAction="#handleButtonAction" GridPane.rowIndex="0" GridPane.columnIndex="1"></Button>

    <Label text="Result: " GridPane.rowIndex="1" GridPane.columnIndex="0"></Label>
    <Label fx:id="result" text="" GridPane.rowIndex="1" GridPane.columnIndex="1"></Label>

    </GridPane>